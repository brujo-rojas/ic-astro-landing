---
export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "",
  subtitle = "",
  backgroundImage = "/uploads/hero.jpg",
} = Astro.props;
---

<section
  class="relative min-h-[50vh] flex items-center bg-cover pt-30 blur-xs"
  style={`background-image: url(${backgroundImage}); 
    background-position: center 70%;
  `}
>
  <div
    class="absolute top-0 left-0 w-full h-full z-1"
    style={`
    mask: linear-gradient(black,black, rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.25));
    backdrop-filter: blur(32px);
    `}
  >
  </div>

  <div class="container z-2 relative">
    <div class="max-w-3xl text-white">
      <img
        src="/uploads/horizontal-white.png"
        alt={title}
        class="mb-2 w-64 md:w-64"
      />
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
    </div>
  </div>
</section>
