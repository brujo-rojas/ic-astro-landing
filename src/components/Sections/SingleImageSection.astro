---
export interface Props {
  image: string;
  altImage: string;
}
const { image, altImage } = Astro.props;
---

<section class="py-16 bg-gray-100">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div>
        <img
          src={image}
          alt={altImage}
          class="rounded-lg shadow-lg object-cover w-full h-full"
        />
      </div>

      <div>
        <slot />
      </div>
    </div>
  </div>
</section>
