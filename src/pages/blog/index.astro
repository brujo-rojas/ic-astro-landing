---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WideImage from "../../components/Sections/WideImage.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../../utils/dateUtils";

// Obtener todos los posts
const allPosts = await getCollection("blog", ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Ordenar por fecha (más reciente primero)
const posts = allPosts.sort(
  (a, b) =>
    new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<BaseLayout
  title="Blog - Riego, Agricultura y Datos"
  description="Bienvenido a nuestro blog sobre riego, agricultura y análisis de datos agronómicos. Encuentra aquí novedades, consejos y experiencias del mundo agrícola."
>
  <WideImage
    title="Riego, Agricultura y Datos"
    subtitle="Novedades, experiencias y análisis sobre riego y gestión agrícola"
    backgroundImage="/uploads/torres.jpg"
  />

  <section class="blog-section">
    <div class="blog-container">
      {
        posts.map((post) => (
          <div class="blog-item">
            {post.data.image && (
              <img
                src={post.data.image.url}
                alt={post.data.image.alt}
                class="blog-img"
              />
            )}
            <div class="blog-content">
              <h3 class="blog-item-title">{post.data.title}</h3>
              <div class="blog-meta">
                {formatDate(post.data.pubDate)}
                <br />
                {post.data.author}
              </div>
              <p class="blog-desc">{post.data.description}</p>
              <a href={`/blog/${post.slug}`} class="blog-link">
                Leer más &rarr;
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <style lang="scss">
    .blog-section {
      padding: 2rem 0;
    }
    .blog-container {
      max-width: 700px;
      margin: 0 auto;
    }
    .blog-item {
      border-bottom: 1px solid #eee;
      padding: 1rem 0;
      display: flex;
      gap: 1rem;
      align-items: flex-start;
      .blog-img {
        width: 180px;
        height: 120px;
        object-fit: cover;
        border-radius: 3px;
        flex-shrink: 0;
      }
      .blog-content {
        flex: 1;
        .blog-item-title {
          font-size: 1.1rem;
          font-weight: 600;
          margin: 0 0 0.2rem 0;
        }
        .blog-meta {
          font-size: 0.92rem;
          color: #888;
          margin-bottom: 0.2rem;
        }
        .blog-desc {
          color: #444;
          font-size: 0.97rem;
          margin: 0 0 0.4rem 0;
        }
        .blog-link {
          color: #2563eb;
          font-size: 0.95rem;
          text-decoration: none;
          transition: color 0.2s;
          &:hover {
            color: #1741a6;
            text-decoration: underline;
          }
        }
      }
    }
    </style>
</BaseLayout>
